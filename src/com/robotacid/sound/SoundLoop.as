package com.robotacid.sound {	import flash.events.Event;	import flash.media.Sound;	import flash.media.SoundTransform;	import flash.media.SoundChannel;	import flash.utils.getTimer;	/**	 * A wrapper for maintaining sound loops	 *	 * @author Aaron Steed, robotacid.com	 */	public class SoundLoop{				public var name:String;		public var sound:Sound;		public var soundTransform:SoundTransform;		public var soundChannel:SoundChannel;				public var fadeStep:Number;		public var fadeTarget:Number;				public static const DEFAULT_FADE_STEP:Number = 0.1;				public function SoundLoop(name:String, sound:Sound, soundTransform:SoundTransform, soundChannel:SoundChannel){			this.name = name;			this.sound = sound;			this.soundTransform = soundTransform;			this.soundChannel = soundChannel;			fadeStep = 0;			fadeTarget = 0;		}					}}